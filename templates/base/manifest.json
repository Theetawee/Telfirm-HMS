{
  "{% load static %}": "",
  "name": "Telfirm Hospital Management System",
  "short_name": "Telfirm",
  "start_url": "/accounts/login/",
  "theme_color": "#059669",
  "scope": "/",
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "lang": "en",
  "orientation": "portrait",
  "background_color": "#ffffff",
  "display_override": ["window-controls-overlay"],
  "categories": ["Healthcare"],
  "description": "Telfirm Hospital Management System is an advanced and intuitive healthcare solution designed to streamline and optimize hospital operations.",
  "display": "standalone",
  "id": "/",
  "icons": [
    {
      "src": "{% static 'images/72.png' %}",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "{% static 'images/96.png' %}",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "{% static 'images/128.png' %}",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "{% static 'images/144.png' %}",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "{% static 'images/152.png' %}",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "{% static 'images/192.png' %}",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "{% static 'images/512.png' %}",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "{% static 'images/192.png' %}",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "{% static 'images/512.png' %}",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "{% static 'images/512.png' %}",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "{% static 'images/512.png' %}",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 480
  },
  "protocol_handlers": [{ "protocol": "mailto", "url": "/newEmail?to=%s" }],
  "shortcuts": [
    {
      "name": "Documentation",
      "short_name": "Docs",
      "description": "Telfirm's Documentation",
      "url": "/docs",
      "icons": [
        {
          "src": "{% static 'images/docs.png' %}",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "dir": "ltr",
  "handle_links": "preferred",
  "scope_extensions": [{ "origin": "*.telfirm.com" }]
}
